model1 <-  gam((avgsinkDp) ~ (sin(sun.time))*season_F*cnpyClass_F +
                 (cos(sun.time))*season_F*cnpyClass_F +
                 scale(snowDensity.senorge)*season_F*cnpyClass_F,
               data = data,  na.action = na.omit,
               family = Tweedie(p=1.1, link = power(0)))
