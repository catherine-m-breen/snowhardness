############## 14. lag statistics ###########
# details
min_warm_open <- min(pred_data[(pred_data$hotcold_F == 'warm') & (pred_data$cnpyClass_F == 'open'), ]$predicted_hardness)
max_warm_open <- max(pred_data[(pred_data$hotcold_F == 'warm') & (pred_data$cnpyClass_F == 'open'), ]$predicted_hardness)
min_cold_open <- min(pred_data[(pred_data$hotcold_F == 'cold') & (pred_data$cnpyClass_F == 'open'), ]$predicted_hardness)
max_cold_open <- max(pred_data[(pred_data$hotcold_F == 'cold') & (pred_data$cnpyClass_F == 'open'), ]$predicted_hardness)

#open canopy stats
max_warm_open - min_warm_open
max_cold_open - min_cold_open

min_warm_closed <- min(pred_data[(pred_data$hotcold_F == 'warm') & (pred_data$cnpyClass_F == 'closed'), ]$predicted_hardness)
max_warm_closed <- max(pred_data[(pred_data$hotcold_F == 'warm') & (pred_data$cnpyClass_F == 'closed'), ]$predicted_hardness)
min_cold_closed <- min(pred_data[(pred_data$hotcold_F == 'cold') & (pred_data$cnpyClass_F == 'closed'), ]$predicted_hardness)
max_cold_closed <- max(pred_data[(pred_data$hotcold_F == 'cold') & (pred_data$cnpyClass_F == 'closed'), ]$predicted_hardness)

#closed canopy stats
max_warm_closed - min_warm_closed
max_cold_closed - min_cold_closed

# overall
min_crust <- min(pred_data$predicted_hardness)
max_slush <- max(pred_dat$predicted_hardness)

# lag
findLag_sunset <- function(crust, data, daylength) {
  ## find suntime for crust
  suntime_lag <- data[data$predicted_hardness == crust, ]$sun.time
  ## determine lag
  radians <- (suntime_lag - (3*pi/2))
  ## account for daylength
  daylength_r <-daylength * (2*pi)/24
  #radians <- radians * daylength_r/pi
  hours = radians * 24/ (2*pi)
  # convert to hours
  return(hours)
}

findLag_sunrise <- function(slush, data, daylength) {
  suntime_lag <- data[data$predicted_hardness == slush, ]$sun.time
  # find lag in radians
  radians = suntime_lag - (pi/2)
  # account for variable daylength
  daylength_r <-daylength * (2*pi)/24
  radians <- radians * daylength_r/pi
  # convert to hours
  hours = radians * 24/ (2*pi)
  return(hours)
}

# open canopy : crust (short nights)
findLag_sunset(min_warm_open, pred_data, 8) ## warm
findLag_sunset(min_cold_open, pred_data, 16) ## cold

# overall
suntime_lag <- pred_data[pred_data$predicted_hardness == min_crust, ]$sun.time
## determine lag
radians <- (suntime_lag - (3*pi/2))
## account for daylength
daylength_r <-daylength * (2*pi)/24
#radians <- radians * daylength_r/pi
hours = radians * 24/ (2*pi) * (12/12)



